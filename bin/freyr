#!/usr/bin/perl
package freyr;
# ABSTRACT: A sample script to connect to IRC and do nothing

use Freyr::Base;
use Getopt::Long qw( GetOptionsFromArray );

use Freyr::Plugin::Say;

my %opt = (
    nick => 'freyr',
);
GetOptionsFromArray( \@ARGV, \%opt,
    'nick|n=s',
);

my $bot = Freyr->new(
    nick => $opt{nick},
    prefix => '!',
    host => $ARGV[0],
    channels => [ @ARGV[1..$#ARGV] ],
    plugins => {
        say => Freyr::Plugin::Say->new,
    },
);

Mojo::IOLoop->start;
